<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationLabelStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor"></item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleTextAppearance">@style/MyToolbarTitleText</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="itemPaddingTop">16dp</item>
        <item name="itemPaddingBottom">16dp</item>
        <item name="itemTextAppearanceInactive">@style/CustomBottomNavTextInactive</item>
        <item name="itemTextAppearanceActive">@style/CustomBottomNavTextActive</item>
    </style>

    <style name="CustomBottomNavTextInactive" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">0sp</item>
    </style>

    <style name="CustomBottomNavTextActive" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">0sp</item>
    </style>

    <style name="SmartMeetToolbarPopup" parent="ThemeOverlay.Material3.Light">
        <item name="android:textColorPrimary">@color/light_on_surface</item>
        <item name="android:itemBackground">@color/light_surface</item>
    </style>

</resources>